[flake8]
ignore = D401, WPS305
max-line-length = 100
max-complexity = 18

strictness=long
docstring_style=numpy

exclude =
    .additional/*

per-file-ignores =
    scripts/* : D, WPS
    tests/* : D, S, WPS317
    poetry_project_mypy_wemake_black/__init__.py : WPS412, D400, D103, WPS410

# Should be last to correctly show in editor
inline-quotes = "
